<div class="max-w-6xl mx-auto px-6 py-8">
  <h1 class="text-2xl font-bold text-green-700 mb-6">All Submissions</h1>

  <% if (submissions.length === 0) { %>
    <p class="text-gray-600">No submissions found.</p>
  <% } else { %>
    <div class="overflow-x-auto rounded-lg shadow border border-gray-200">
      <table class="min-w-full bg-white text-sm">
        <thead class="bg-green-600 text-white">
          <tr>
            <th class="px-4 py-3 text-left">Name</th>
            <th class="px-4 py-3 text-left">Email</th>
            <th class="px-4 py-3 text-left">Phone</th>
            <th class="px-4 py-3 text-left">Preview</th>
            <th class="px-4 py-3 text-left">Swapped</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% submissions.forEach(sub => { %>
            <tr class="hover:bg-green-50">
              <td class="px-4 py-3 font-medium text-gray-700"><%= sub.name %></td>
              <td class="px-4 py-3 text-gray-600"><%= sub.email %></td>
              <td class="px-4 py-3 text-gray-600"><%= sub.phone %></td>
              <td class="px-4 py-3">
                <% if(sub.swappedImage) { %>
                  <% let imgSrc = sub.swappedImage.swappedImgURL || `/uploads/${sub.swappedImage.filename}`; %>
                  <img src="<%= imgSrc %>" 
                       alt="Swapped"
                       class="w-16 h-16 object-cover rounded-md cursor-pointer previewBtn border"
                       data-src="<%= imgSrc %>">
                <% } else { %>
                  <span class="text-gray-400">N/A</span>
                <% } %>
              </td>
              
              <td class="px-4 py-3">
                <% if (sub.swappedImage) { %>
                  <% if (sub.swappedImage.swappedImgURL) { %>
                    <a href="<%= sub.swappedImage.swappedImgURL %>" 
                       download 
                       class="px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700 transition">
                       Download
                    </a>
                  <% } else if (sub.swappedImage.filename) { %>
                    <a href="/uploads/<%= sub.swappedImage.filename %>" 
                       download 
                       class="px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700 transition">
                       Download
                    </a>
                  <% } else { %>
                    <span class="text-gray-400">N/A</span>
                  <% } %>
                <% } else { %>
                  <span class="text-gray-400">N/A</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if(pagination.totalPages > 1) { %>
      <div class="flex justify-center mt-6 space-x-2">
        <% for(let i=1; i <= pagination.totalPages; i++) { %>
          <a href="?page=<%= i %>" 
             class="px-3 py-1 rounded border 
                    <%= i === pagination.currentPage 
                        ? 'bg-green-600 text-white border-green-600' 
                        : 'bg-white text-green-600 border-gray-300 hover:bg-green-50' %>">
            <%= i %>
          </a>
        <% } %>
      </div>
    <% } %>
  <% } %>
</div>

<!-- Modal for preview -->
<div id="modal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50">
  <div class="relative">
    <span class="absolute -top-8 right-0 text-white text-2xl cursor-pointer close">&times;</span>
    <img id="modalImage" class="max-w-full max-h-[80vh] rounded-lg shadow-lg border-4 border-white">
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("modal");
    const modalImage = document.getElementById("modalImage");
    const closeModal = document.querySelector(".close");

    document.querySelectorAll(".previewBtn").forEach(btn => {
      btn.addEventListener("click", () => {
        modal.classList.remove("hidden");
        modalImage.src = btn.dataset.src;
      });
    });

    closeModal.addEventListener("click", () => {
      modal.classList.add("hidden");
      modalImage.src = "";
    });

    window.addEventListener("click", e => {
      if (e.target === modal) {
        modal.classList.add("hidden");
        modalImage.src = "";
      }
    });
  });
</script>
